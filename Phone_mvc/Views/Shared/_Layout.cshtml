<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phone Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-header {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            color: #212529;
            padding: 1rem 0;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            border-bottom: 1px solid #dee2e6;
        }


        .main-header .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            margin: 0;
        }

        .main-content {
            flex: 1;
            display: flex;
            min-height: 0;
        }

        .sidebar {
            width: 250px;
            background: white;
            border-right: 1px solid #dee2e6;
            box-shadow: 2px 0 4px rgba(0,0,0,0.1);
            padding: 1.5rem 0;
        }

        .sidebar .nav-link {
            color: #495057;
            padding: 0.75rem 1.5rem;
            border-radius: 0;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background-color: #f8f9fa;
            color: #007bff;
            transform: translateX(5px);
        }

        .sidebar .nav-link.active {
            background-color: #e9ecef;
            color: #212529;
            font-weight: 500;
        }

        .sidebar .nav-link i {
            width: 20px;
            margin-right: 10px;
         }

        .content-area {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        .main-footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 1rem 0;
            margin-top: auto;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.5rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #dee2e6;
            padding: 1.25rem;
        }

        .table th {
            background-color: #f8f9fa;
            border-top: none;
            font-weight: 600;
            color: #495057;
            padding: 1rem 0.75rem;
        }

        .table td {
            padding: 0.875rem 0.75rem;
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        .btn {
            border-radius: 0.375rem;
            font-weight: 500;
            transition: all 0.2s;
        }

        .btn-sm {
            padding: 0.375rem 0.75rem;
        }

        #toast-container {
            z-index: 9999;
        }

        .table-responsive {
            padding: 0 !important;
            margin: 0 !important;
        }
    </style>
</head>
<body>
    <header class="main-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="text-center">
                <h1 class="navbar-brand mb-0">
                    <i class="fas fa-cubes me-2"></i>
                    Phone Management
                </h1>
            </div>
            <div id="auth-section">
                <div>Đăng nhập</div>
            </div>
        </div>
    </header>

    <div class="main-content">
        <nav class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/">
                        <i class="fas fa-tachometer-alt"></i>
                        Trang chủ
                     </a>
                </li>
                <li class="nav-item">
                    <authorize-menu asp-endpoint="/phone">
                        <a class="nav-link" href="/Phone">
                            <i class="fas fa-mobile-alt"></i>
                            Quản lý Điện thoại
                        </a>
                    </authorize-menu>
                </li>
                <li class="nav-item">
                    <authorize-menu asp-endpoint="/brand">
                        <a class="nav-link" href="/Brand">
                            <i class="fas fa-tags"></i>
                            Quản lý Thương hiệu
                        </a>
                    </authorize-menu>
                </li>
                <li class="nav-item">
                    <authorize-menu asp-endpoint="/user">
                        <a class="nav-link" href="/User">
                            <i class="fas fa-user"></i>
                            Quản lý Người dùng
                        </a>
                    </authorize-menu>
                </li>
                <li class="nav-item">
                    <authorize-menu asp-endpoint="/role">
                        <a class="nav-link" href="/Role">
                            <i class="fas fa-users"></i>
                            Quản lý Vai trò
                        </a>
                    </authorize-menu>
                </li>
                <li class="nav-item">
                    <authorize-menu asp-endpoint="/permission">
                        <a class="nav-link" href="/Permission">
                            <i class="fas fa-user-lock"></i>
                            Quản lý Quyền hạn
                        </a>
                    </authorize-menu>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Report">
                       <i class="fas fa-chart-bar"></i>
                       Báo cáo
                    </a>
                  
                </li>
                <li class="nav-item">             
                    <a class="nav-link" href="/Setting">
                       <i class="fas fa-cog"></i>
                       Cài đặt
                    </a>
                </li>
            </ul>
        </nav>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        <div class="container-fluid">
            <p class="mb-0">
                © 2025 Phone Management System.
                <span class="text-muted">Phát triển bởi Your Company</span>
            </p>
        </div>
    </footer>

    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/admin-common.js" asp-append-version="true"></script>

    <script>
        const isAuthenticated = @(User?.Identity?.IsAuthenticated.ToString().ToLower());
        function showToast(message, type = 'success') {
            const toastContainer = $('#toast-container');
            const bgClass = type === 'success' ? 'bg-success' : 'bg-danger';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            const toastHtml = `
                <div class="toast align-items-center text-white ${bgClass} border-0" role="alert" style="min-width: 200px;">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas ${icon} me-2"></i>${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            toastContainer.append(toastHtml);
            const toast = new bootstrap.Toast(toastContainer.find('.toast:last-child'), { autohide: true, delay: 2000 });
            toast.show();

            $('.toast').on('hidden.bs.toast', function () {
                $(this).remove();
            });
        }

        function logout() {
            $.ajax({
                url: '/Auth/Logout', 
                type: 'POST',
                success: function() {
                    showToast('Đăng xuất thành công!', 'success');
                    setTimeout(() => {
                        window.location.href = '/Auth'; 
                    }, 1000);
                },
                error: function(xhr, status, error) {
                    console.error('Logout error:', error);
                    showToast('Đăng xuất thất bại. Vui lòng thử lại.', 'error');
                }
            });
        }

        $(document).ready(function () {
            const authSection = $('#auth-section');

            if (!isAuthenticated) {
                window.location.href = '/Auth';
                return; 
            }

            authSection.html(`
                <button class="btn btn-outline-danger btn-sm rounded-circle d-flex align-items-center justify-content-center" id="logoutBtn" style="width: 36px; height: 36px;" title="Đăng xuất">
                   <i class="fas fa-sign-out-alt"></i>
                </button>
            `);

            $('#logoutBtn').on('click', function () {
                logout();
            });
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>